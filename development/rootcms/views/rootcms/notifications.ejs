<script type="text/javascript">
var xhrStatus;

var pageSize=15, totalNum=0;
var start=0, end=pageSize;

$(document).ready(function() {
	$('#display_more_btn').hide();
	$('#img_loading_div').show();
	load_data();
});

function load_more(){
	$('#display_more_btn').hide();
	$('#img_loading_div').show();
	start=end;
	end=start+pageSize;
	load_data();
}

function load_data(){
	$(".alert").remove();
	var jsonRow=backendDirectory+"/load_notifications?start="+start+"&limit="+pageSize;
		
	if(xhrStatus) xhrStatus.abort();
	xhrStatus=$.getJSON(jsonRow,function(html){
	if(html.error){
		$("#table-breakpoint").before('<div class="alert alert-danger">'+html.error+'</div>');
	}else{
		totalNum=html.total;
		var contentHtml="";
				
		if(html.aaData.length>0){
			$.each(html.aaData, function(i,row){
				var msgStr="", activeClass='';
				
				if(row.subject && row.subject!="")	{
					msgStr+=row.subject+"<br>";
				}
				if(row.message && row.message!="")	{
					msgStr+=row.message;
				}
				if(row.read_status=="0" || row.read_status==0)	{
					activeClass="ntfctnactive";
				}
				var linkStr='javascript:void(0);';
				if(row.collection_link_id!=""){
					linkStr='/change_notifications?id='+row._id;
				}
				if(msgStr=="" && row.message_type=="comment")	{
					msgStr="You have a new message!";
				}
				contentHtml+="<tr>";
				contentHtml+='<td>'+datetime(row.created, true)+'</td>';
				contentHtml+='<td>'+msgStr+'</td>';
				contentHtml+='<td class="actions-list"><a href="'+linkStr+'" title="Edit"><i class="fa fa-pencil"></i></a></td>';
				contentHtml+="</tr>";
			});
			$("#documents_data").append(contentHtml);
					
     		//
     		$('.toggleCheckbox').bootstrapToggle({
      			on: 'Yes',
      			off: 'No'
    		});
     	}else{
     		$("#documents_data").html("");
			$("#table-breakpoint").before('<div class="alert alert-danger">No more records found!</div>');
     	}
	}
			
		//initialize table
		$('#table').basictable();
	  	$('#table-breakpoint').basictable({
    		breakpoint: 751
     	});
    			
		if(end< totalNum){
			$('#display_more_btn').show();
		}
		$('#img_loading_div').hide();
			
	});
}	
</script>

