<script>
function loadCollectionCount(collectionStr){
	var jsonRow = backendDirectory+'/api_get_count?collection='+collectionStr;
	$.getJSON(jsonRow,function(result){
		if(result.total){
			if(collectionStr=="users")	{
				$("#users_count").html(result.total);
			}
			if(collectionStr=="venue")	{
				$("#venue_count").html(result.total);
			}
			if(collectionStr=="teams")	{
				$("#teams_count").html(result.total);
			}
		}
	});
}
$(function () {
	loadCollectionCount('users');
	loadCollectionCount('venue');
	loadCollectionCount('teams');
});
</script>
